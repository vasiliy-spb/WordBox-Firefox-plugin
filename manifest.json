{
  "manifest_version": 2,
  "name": "WordBox",
  "version": "1.0",
  "description": "Плагин для сбора английских слов со страниц в личный словарь.",
  "icons": {
    "48": "icons/icon_plugin_24.svg"
  },
  "browser_action": {
    "default_icon": "icons/icon_plugin_24.svg",
    "default_popup": "popup.html",
    "default_title": "Мой словарь WordBox"
  },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>",
    "https://dictionary.skyeng.ru/*"
  ],
  "background": {
    "scripts": ["src/lib/indexedDB.js", "src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/styles/content.css"]
    }
  ],
  "web_accessible_resources": [
    "icons/icon_add_24.svg"
  ]
}